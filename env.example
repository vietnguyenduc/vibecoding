# =============================================================================
# Environment Configuration for Debt and Repayment Web Application
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# cp env.example .env.local

# =============================================================================
# REQUIRED: Supabase Configuration
# =============================================================================
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment: development, staging, production
VITE_APP_ENV=development

# Application name and version
VITE_APP_NAME="Debt and Repayment Web App"
VITE_APP_VERSION=1.0.0

# Default language (en, vi)
VITE_DEFAULT_LANGUAGE=en

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# OPTIONAL: External Services
# =============================================================================
# Custom API endpoints (if using external APIs)
# VITE_API_BASE_URL=https://api.yourdomain.com

# File upload configuration
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=.xlsx,.csv,.txt

# =============================================================================
# OPTIONAL: Analytics and Monitoring
# =============================================================================
# Sentry for error tracking
# VITE_SENTRY_DSN=your_sentry_dsn_here
# VITE_SENTRY_ENVIRONMENT=development

# Google Analytics
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# OPTIONAL: Performance and Caching
# =============================================================================
# Cache configuration
VITE_CACHE_DURATION=3600  # 1 hour in seconds
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# OPTIONAL: Security
# =============================================================================
# Session timeout (in minutes)
VITE_SESSION_TIMEOUT=480  # 8 hours

# Rate limiting
VITE_API_RATE_LIMIT=100  # requests per minute

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable debug logging
VITE_DEBUG=false

# Mock data for development
VITE_USE_MOCK_DATA=false

# Hot reload configuration
VITE_HOT_RELOAD_PORT=5173

# =============================================================================
# NOTES
# =============================================================================
# - All VITE_* variables are exposed to the client-side code
# - Never commit .env.local to version control
# - Use .env.production for production-specific settings
# - Restart the development server after changing environment variables 